<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE gsa-template PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN" "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<!--This file was generated by the ATG Repository Editor plugin-->
<gsa-template>
    <header>
        <name>Blog Repository</name>
        <author>Jason Zhu</author>
    </header>    
    <!--Item Descriptor user for Citrisys ATG Training.-->
    <item-descriptor name="Blog">
        <table name="training_blog" type="primary" id-column-names="id">
            <property name="name" data-type="string"/>
            <property name="url" data-type="string" />
            <property name="category" data-type="string"/>
        </table>
        <!--Multi table to persist one-to-many relationship.-->
        <table name="training_Blog_Post" type="multi" id-column-names="training_id">
            <property name="Post_multi" column-names="id" data-type="set" component-item-type="Post" />
        </table>
    </item-descriptor>
    
    
    
    <!--Item Descriptor address for Citrisys ATG training.-->
    <item-descriptor name="Post">
        <table name="training_post" type="primary" id-column-names="id">
            <property name="name" data-type="string" />
            <property name="text" data-type="string" />
        </table> 
     <!--Multi table to persist one-to-many relationship.-->
        <table name="training_Post_Comment" type="multi" id-column-names="training_id">
            <property name="Comment_multi" column-names="id" data-type="set" component-item-type="Comment"/>
        </table>    
   </item-descriptor>
        
        
        
    <item-descriptor name="Comment">
        <table name="training_comment" type="primary" id-column-names="id">
            <property name="email" data-type="string" />
            <property name="text" data-type="string" />
        </table>
     </item-descriptor>
</gsa-template>

